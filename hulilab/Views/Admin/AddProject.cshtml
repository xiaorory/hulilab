@model hulilab.Models.DAL.Project
@using hulilab.Models.DAL
@using hulilab.Models.BLL
@using hulilab.Models.Common
@{
    int? userId = StringHelper.ConvertObjectToInt(Request.Params["userid"]);
    Member member = new Member();

    if (null == userId)
    {
        userId = StringHelper.ConvertObjectToInt(Session["userId"]);
    }

    if (null != userId && userId > 0)
    {
        member.ID = userId;
        MemberService ms = new MemberService();
        if (!ms.Find(member))
        {
            Response.Redirect(Url.Content("~/Home"));
        }
    }
    else
    {
        Response.Redirect(Url.Content("~/Home"));
    }
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="inner">
    @{
        List<Project> projects;
        ProjectService ps = new ProjectService();
        if (ps.LoadUserProjects((int)userId, out projects))
        {
        <table class="full">
            <thead>
                <tr>
                    <th style="width: 30%">
                        研究期限
                    </th>
                    <th style="width: 40%">
                        基金项目英文名
                    </th>
                    <th style="width: 40%">
                        基金项目中文名
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Project project in projects)
                {
                    <tr>
                        <td>@project.Duration
                        </td>
                        <td>@project.EnuTitle
                        </td>
                        <td>@project.ChsTitle
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }
    }
    @using (Html.BeginForm("AddProject", "Member", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        <div class="block">
            <div class="blocktitle">
            <h3>新增基金项目信息</h3>
            </div>
            <div class="blockcontent">
                @Html.HiddenFor(model => model.Userid, new { Value = userId })
                <div class="editor-label">
                    @Html.LabelFor(model => model.Duration)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Duration)
                    @Html.ValidationMessageFor(model => model.Duration)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.EnuTitle)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.EnuTitle)
                    @Html.ValidationMessageFor(model => model.EnuTitle)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ChsTitle)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.ChsTitle)
                    @Html.ValidationMessageFor(model => model.ChsTitle)
                </div>
                <p>
                    <input type="submit" value="增加" class="btn" />
                </p>
            </div>
        </div>
    }
</div>
