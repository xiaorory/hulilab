@model hulilab.Models.DAL.Member
@using hulilab.Models.DAL
@using hulilab.Models.BLL
@using hulilab.Models.Common
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("EditMember", "Member", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(model => model.ID);
    @Html.ValidationSummary(true)
    <div class="inner">
        <div class="block">
            <div class="blocktitle">
                <h3>
                    账号信息<span class="mark">（*必填）</span></h3>
            </div>
            <div class="blockcontent">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Username)<span class="mark">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Username, new { @class = "edittextbox" })
                    @Html.ValidationMessageFor(model => model.Username)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Password)<span class="mark">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Password, new { @class = "edittextbox" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
        </div>
        <div class="block">
            <div class="blocktitle">
                <h3>
                    个人信息<span class="mark">（*必填）</span></h3>
            </div>
            <div class="blockcontent">
                <div class="editor-label">
                    @Html.LabelFor(model => model.EnuName)<span class="mark">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.EnuName, new { @class = "edittextbox" })
                    @Html.ValidationMessageFor(model => model.EnuName)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ChsName)<span class="mark">*</span>
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.ChsName, new { @class = "edittextbox" })
                    @Html.ValidationMessageFor(model => model.ChsName)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Sex)<span class="mark">*</span>
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.Sex,new[] {new SelectListItem(){Text ="男",Value=bool.TrueString},new SelectListItem(){Text="女",Value= bool.FalseString}})
                    @Html.ValidationMessageFor(model => model.Sex)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.EnuIntroduction)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.EnuIntroduction, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.EnuIntroduction)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ChsIntroduction)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.ChsIntroduction, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.ChsIntroduction)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.EnuResearchField)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.EnuResearchField, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.EnuResearchField)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ChsResearchField)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.ChsResearchField, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.ChsResearchField)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.EnuEducationHistory)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.EnuEducationHistory, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.EnuEducationHistory)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ChsEducationHistory)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.ChsEducationHistory, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.ChsEducationHistory)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.EnuAwards)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.EnuAwards, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.EnuAwards)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ChsAwards)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.ChsAwards, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.ChsAwards)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.EnuAcademicPosition)<span class="mark">（*此字段仅对老师适用）</span>
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.EnuAcademicPosition, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.EnuAcademicPosition)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.ChsAcademicPosition)<span class="mark">（*此字段仅对老师适用）</span>
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.ChsAcademicPosition, new { @class = "edittextarea" })
                    @Html.ValidationMessageFor(model => model.ChsAcademicPosition)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Phone)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "edittextbox" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Email)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Email, new { @class = "edittextbox" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Status)<span class="mark">*</span>
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.Status, new[] { new SelectListItem() { Text = "是", Value = bool.TrueString }, new SelectListItem() { Text = "否", Value = bool.FalseString } })
                    @Html.ValidationMessageFor(model => model.Status)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(model => model.IsTeacher)<span class="mark">*</span>
                </div>
                <div class="editor-field">
                    @Html.DropDownListFor(model => model.IsTeacher, new[] { new SelectListItem() { Text = "是", Value = bool.TrueString }, new SelectListItem() { Text = "否", Value = bool.FalseString } })
                    @Html.ValidationMessageFor(model => model.IsTeacher)
                </div>
            </div>
        </div>
        <p>
            <input type="submit" value="修改" class="btn" />
        </p>
        <div class="block">
            <div class="blocktitle">
                <h3>
                    基金项目信息</h3>
            </div>
            <div class="blockcontent">
                @{
                                      ProjectService ps = new ProjectService();
                                      List<Project> projects;
                                      if (ps.LoadUserProjects((int)Model.ID, out projects))
                                      {
                                          if (projects.Count == 0)
                                          {
                    <p>
                        没有基金</p>
                                          }
                                          else
                                          {
                    <table class="full">
                        <thead>
                            <tr>
                                <th style="width: 20%">
                                    研究期限
                                </th>
                                <th style="width: 30%">
                                    基金项目英文名称
                                </th>
                                <th style="width: 30%">
                                    基金项目中文名称
                                </th>
                                <th style="width: 20%">
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Project project in projects)
                            {
                                <tr>
                                    <td>@project.Duration
                                    </td>
                                    <td>@project.EnuTitle
                                    </td>
                                    <td>@project.ChsTitle
                                    </td>
                                    <td>
                                        @Html.ActionLink("编辑", "EditProject", new { projectid = @project.ID, userId = @Model.ID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                                          }
                                      }
                                      else
                                      {
                    <p>@ps.ErrorMsg</p>
                                      }
                    <span class="spanbtn" style="float: right">@Html.ActionLink("新增基金", "AddProject", new { userId = @Model.ID })</span>
                }
            </div>
        </div>
    </div>
}
