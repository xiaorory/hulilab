                                </td>
                                <td>@member.ChsName
                                </td>
                                <td>@member.EnuName
                                </td>
                                @if (isTeacher)
                                {
                                    <td>@Html.ActionLink("详情", "Index", "Member", new { userid = @member.ID }, null) | 
                                        @Html.ActionLink("编辑", "EditMember", new { userid = @member.ID })
                                    </td>
                                }
                                else
                                {
                                    <td>@Html.ActionLink("详情", "Index", "Member", new { userid = @member.ID }, null)</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>没有现任学生</p>
            }
            </div>
        </div>
        }
        else
        {
           <p>@ms.ErrorMsg</p>
        }

    }

    @{
        List<Member> graduatedStudents;
        if (ms.LoadPastStudents(out graduatedStudents))
        {
        <div class="block">
            <div class="blocktitle">
                <h3>
                    已毕业学生列表</h3>
            </div>
            <div class="blockcontent">
            @if (graduatedStudents.Count > 0)
            {
                <table class="full">
                    <thead>
                        <tr>
                            <th style="width: 20%">
                                用户名
                            </th>
                            <th style="width: 30%">
                                中文名
                            </th>
                            <th style="width: 30%">
                                英文名
                            </th>
                            <th style="width: 20%">
