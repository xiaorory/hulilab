                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Member member in graduatedStudents)
                        {
                            <tr>
                                <td>@member.Username
                                </td>
                                <td>@member.ChsName
                                </td>
                                <td>@member.EnuName
                                </td>
                                @if (isTeacher)
                                {
                                    <td>@Html.ActionLink("详情", "Index", "Member", new { userid = @member.ID }, null) | 
