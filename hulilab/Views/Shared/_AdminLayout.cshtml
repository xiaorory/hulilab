@using hulilab.Models.Common
<!DOCTYPE html>
<html>
<head>
    <title>@Constants.ADMINWEBTITLE</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
</head>
<!-- end #header -->
@RenderSection("Head", false)
<body>
    <div id="header">
        <div id="logo">
            <h1>
                <a href="#">胡理的实验室</a></h1>
            <p>
                认知与人格教育部重点实验室，西南大学心理学部，中国</p>
        </div>
        <div id="menu">
            <ul>
                <li>@Html.ActionLink("首页", "Index", "Admin")</li>
                <li>@Html.ActionLink("个人资料", "EditMember", "Admin")</li>
