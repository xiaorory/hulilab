                <li>@Html.ActionLink("共享资料", "ShareManagement", "Admin")</li>
                <li>@Html.ActionLink("评论管理", "CommentManagement", "Admin")</li>
                <li>@Html.ActionLink("论文管理", "PublicationManagement", "Admin")</li>
            </ul>
        </div>
    </div>
