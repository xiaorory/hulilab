@using hulilab.Models.DAL
@using hulilab.Models.BLL
@using hulilab.Models.Common
<div class="inner">
    @{
        MemberService ms = new MemberService();
        List<Member> teachers;
        if (ms.LoadCurrentTeachers(out teachers))
        {
        <div class="block">
            <div class="blocktitle">
                <h3>
                    Current Teacher</h3>
            </div>
            <div class="blockcontent">
                @if (teachers.Count > 0)
                {
                    <table class="full">
                        <thead>
                            <tr>
                                <th style="width: 15%">
                                    Name
                                </th>
                                <th style="width: 8%">
                                    Sex
                                </th>
                                <th style="width: 12%">
                                    Phone
                                </th>
                                <th style="width: 20%">
                                    Email
                                </th>
                                <th style="width: 35%">
                                    Research Field
                                </th>
                                <th style="width: 10%">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Member teacher in teachers)
                            {
                                <tr>
                                    <td>@teacher.EnuName
                                    </td>
                                    <td>@StringHelper.GetSex(teacher.Sex, Language.ENU)
                                    </td>
                                    <td>@teacher.Phone
                                    </td>
                                    <td>@teacher.Email
                                    </td>
                                    <td>@teacher.EnuResearchField
                                    </td>
                                    <td>@Html.ActionLink("Details>>", "Index", "Member", new { userid = @teacher.ID }, null)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>
                        No teachers yet.</p>
                }
            </div>
        </div>
        }
        else
        {
        <p>@ms.ErrorMsg</p>
        }
    }
